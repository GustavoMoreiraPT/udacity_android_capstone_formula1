<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_constructors"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="Constructors"
            app:backgroundTint="@color/design_default_color_error"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="263dp"
            app:layout_constraintTop_toBottomOf="@id/button_drivers"
            app:layout_constraintBottom_toTopOf="@id/button_grandprix"/>

        <Button
            android:id="@+id/button_drivers"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="3dp"
            android:text="Drivers"
            app:layout_constraintBottom_toTopOf="@+id/button_constructors"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_grandprix"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="Find a Grand Prix"
            app:backgroundTint="@color/material_on_background_emphasis_high_type"
            app:layout_constraintTop_toBottomOf="@+id/button_constructors" />

        <Button
            android:id="@+id/button_about"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="About the app"
            app:backgroundTint="@android:color/holo_green_light"
            app:layout_constraintTop_toBottomOf="@+id/button_grandprix" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </layout>